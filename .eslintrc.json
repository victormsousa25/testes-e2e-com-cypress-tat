{
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true,
      "mocha": true  // Adicionado para reconhecer describe, it, etc.
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12
    },
    "globals": {
      "cy": "readonly",      // Adicionado para reconhecer 'cy'
      "Cypress": "readonly"   // Adicionado para reconhecer 'Cypress'
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "no-trailing-spaces": [
        "error"
      ]
    }
  }
  